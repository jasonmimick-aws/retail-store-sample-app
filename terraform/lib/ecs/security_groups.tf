resource "aws_security_group" "checkout" {
  name        = "${var.environment_name}-checkout-service"
  description = "Security group for checkout service"
  vpc_id      = var.vpc_id

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = var.tags
}

